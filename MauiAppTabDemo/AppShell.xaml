<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppTabDemo.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:MauiAppTabDemo.Views"
    xmlns:local="clr-namespace:MauiAppTabDemo"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate view:HomePage}" />
        </Tab>
        <Tab Title="Info">
            <ShellContent ContentTemplate="{DataTemplate view:InfoPage}" />
        </Tab>
        <Tab Title="Notification">
            <ShellContent ContentTemplate="{DataTemplate view:NotificationPage}" />
        </Tab>
        <Tab Title="Perfil">
            <ShellContent ContentTemplate="{DataTemplate view:PerfilPage}" />
        </Tab>
        <Tab Title="TestPage">
            <ShellContent ContentTemplate="{DataTemplate view:TestPage}" />
        </Tab>
        <Tab Title="DataPage">
            <ShellContent ContentTemplate="{DataTemplate view:DataPage}" />
        </Tab>
    </TabBar>

</Shell>
